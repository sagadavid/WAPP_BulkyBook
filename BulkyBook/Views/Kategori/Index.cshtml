@model IEnumerable<Kategori>
@{
    ViewData["Title"] = "Index";
}

<div class="container-p3" >
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> category list </h2>
        </div>
        <div class="col col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn-primary">
            <i class="bi bi-plus-circle"></i> &nbsp;Create New Category
      
     </a>

        </div>
    </div>
</div>

<h1>Index Kategori</h1>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.DisplayOrder
                </td>
            </tr>
        }
    </tbody>
</table>